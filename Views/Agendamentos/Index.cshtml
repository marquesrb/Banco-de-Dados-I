@model IEnumerable<prjGura.Models.Servico>

@{
    ViewData["Title"] = "Serviços";
}

<div class="container mt-4">

    <!-- Botão Criar Novo -->
    <div class="mb-3">
        <a asp-action="Create" class="btn btn-primary">Criar Novo Serviço</a>
    </div>

    <!-- Formulário de Filtro -->
    <div class="card shadow-sm mb-4">
        <div class="card-body">
            <form asp-action="Index" method="get">
                <div class="row">

                    <div class="col-md-4">
                        <input type="text" name="Idbanhista" placeholder="Cpf Funcionario..." class="form-control" />
                    </div>

                    <div class="col-md-4">
                        <input type="date" name="dtaIni" class="form-control" />
                    </div>

                    <div class="col-md-4">
                        <input type="date" name="dtaFim" class="form-control" />
                    </div>

                    <div class="col-md-4 mt-4">
                        <button type="submit" class="btn btn-primary">Filtrar</button>
                    </div>
                </div>
            </form>
        </div>
    </div>

    <!-- Tabela de Serviços -->
    <div class="card shadow-sm">
        <div class="card-body">
            <table class="table table-striped table-hover">
                <thead class="table-light">
                    <tr>
                        <th>@Html.DisplayNameFor(model => model.Tipo)</th>
                        <th>@Html.DisplayNameFor(model => model.Preco)</th>
                        <th>@Html.DisplayNameFor(model => model.Data)</th>
                        <th>@Html.DisplayNameFor(model => model.Horario)</th>
                        <th>@Html.DisplayNameFor(model => model.Status)</th>
                        <th>Funcionário</th>
                        <th>Caixa</th>
                        <th>Pet</th>
                        <th>Venda</th>
                        <th>Ações</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@Html.DisplayFor(modelItem => item.Tipo)</td>
                            <td>@Html.DisplayFor(modelItem => item.Preco)</td>
                            <td>@Html.DisplayFor(modelItem => item.Data)</td>
                            <td>@Html.DisplayFor(modelItem => item.Horario)</td>
                            <td>@Html.DisplayFor(modelItem => item.Status)</td>
                            <td>@Html.DisplayFor(modelItem => item.IdbanhistaNavigation.Cpf)</td>
                            <td>@Html.DisplayFor(modelItem => item.IdcaixaNavigation.Cpf)</td>
                            <td>@Html.DisplayFor(modelItem => item.IdpetNavigation.Idpet)</td>
                            <td>@Html.DisplayFor(modelItem => item.IdvendaNavigation.Id)</td>
                            <td>
                                <a asp-action="Edit" asp-route-id="@item.Idservico" class="btn btn-warning btn-sm">Editar</a> |
                                <a asp-action="Details" asp-route-id="@item.Idservico" class="btn btn-info btn-sm">Detalhes</a> |
                                <a asp-action="Delete" asp-route-id="@item.Idservico" class="btn btn-danger btn-sm">Excluir</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
