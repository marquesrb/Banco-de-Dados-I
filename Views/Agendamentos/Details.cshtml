@model prjGura.Models.Servico

@{
    ViewData["Title"] = "Detalhes do Serviço";
}

<div class="container mt-4">
    <h1>@ViewData["Title"]</h1>
    <h4>Detalhes do Serviço</h4>
    <hr />

    <!-- Exibição dos Detalhes -->
    <div class="card shadow-sm">
        <div class="card-body">
            <dl class="row">
                <!-- Tipo -->
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Tipo)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Tipo)
                </dd>

                <!-- Preço -->
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Preco)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Preco)
                </dd>

                <!-- Data -->
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Data)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Data)
                </dd>

                <!-- Horário -->
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Horario)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Horario)
                </dd>

                <!-- Status -->
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Status)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Status)
                </dd>

                <!-- Banhista (Cpf) -->
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.IdbanhistaNavigation)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.IdbanhistaNavigation.Cpf)
                </dd>

                <!-- Caixa (Cpf) -->
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.IdcaixaNavigation)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.IdcaixaNavigation.Cpf)
                </dd>

                <!-- Pet (Id) -->
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.IdpetNavigation)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.IdpetNavigation.Idpet)
                </dd>

                <!-- Venda (Id) -->
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.IdvendaNavigation)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.IdvendaNavigation.Id)
                </dd>
            </dl>
        </div>
    </div>

    <!-- Links de Ação -->
    <div class="mt-3">
        <a asp-action="Edit" asp-route-id="@Model?.Idservico" class="btn btn-warning">Editar</a>
        <a asp-action="Index" class="btn btn-secondary">Voltar para a lista</a>
    </div>
</div>
