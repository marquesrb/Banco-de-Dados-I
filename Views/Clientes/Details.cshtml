@model prjGura.Models.Cliente

@{
    ViewData["Title"] = "Detalhes do Cliente";
}

<div class="container mt-4">

    <div class="card shadow-sm">
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-3 fw-bold">
                    @Html.DisplayNameFor(model => model.Nome)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.Nome)
                </dd>

                <dt class="col-sm-3 fw-bold">
                    @Html.DisplayNameFor(model => model.Telefone)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.Telefone)
                </dd>

                <dt class="col-sm-3 fw-bold">
                    @Html.DisplayNameFor(model => model.QuantidadePets)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.QuantidadePets)
                </dd>
            </dl>
        </div>
    </div>

    <div class="d-flex justify-content-between mt-4">
        <a asp-action="Edit" asp-route-id="@Model?.Cpf" class="btn btn-primary">Editar</a>
        <a asp-action="Index" class="btn btn-outline-secondary">Voltar à Lista</a>
    </div>
</div>
