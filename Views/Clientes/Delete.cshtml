@model prjGura.Models.Cliente

@{
    ViewData["Title"] = "Excluir Cliente";
}

<div class="container mt-4">

    <div class="card shadow-sm">
        <div class="card-body">
            <h4 class="text-danger">Tem certeza de que deseja excluir este cliente?</h4>
            <hr />
            <dl class="row">
                <dt class="col-sm-3 fw-bold">
                    @Html.DisplayNameFor(model => model.Nome)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.Nome)
                </dd>

                <dt class="col-sm-3 fw-bold">
                    @Html.DisplayNameFor(model => model.Telefone)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.Telefone)
                </dd>

                <dt class="col-sm-3 fw-bold">
                    @Html.DisplayNameFor(model => model.QuantidadePets)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.QuantidadePets)
                </dd>
            </dl>

            <form asp-action="Delete" class="d-flex justify-content-between">
                <input type="hidden" asp-for="Cpf" />
                <button type="submit" class="btn btn-danger">Excluir</button>
                <a asp-action="Index" class="btn btn-outline-secondary">Voltar à Lista</a>
            </form>
        </div>
    </div>
</div>
