@model IEnumerable<prjGura.Models.Produtosfornecido>

<div class="container mt-4">
    <h1>Produtos Fornecidos</h1>

    <!-- Link para Criar Novo -->
    <p>
        <a asp-action="Create" class="btn btn-success">Criar Novo</a>
    </p>

    <!-- Tabela de Produtos Fornecidos -->
    <table class="table table-striped table-hover">
        <thead class="thead-light">
            <tr>
                <th>ID Prd</th>
                <th>@Html.DisplayNameFor(model => model.PrecoCusto)</th>
                <th>@Html.DisplayNameFor(model => model.Quantidade)</th>
                <th>@Html.DisplayNameFor(model => model.Data)</th>
                <th>Fornecedor</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.IdprodutoNavigation.Id)</td>
                    <td>@Html.DisplayFor(modelItem => item.PrecoCusto)</td>
                    <td>@Html.DisplayFor(modelItem => item.Quantidade)</td>
                    <td>@Html.DisplayFor(modelItem => item.Data)</td>
                    <td>@Html.DisplayFor(modelItem => item.IdfornecedorNavigation.Cnpj)</td>
                </tr>
            }
        </tbody>
    </table>
</div>


