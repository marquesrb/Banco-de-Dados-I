@model prjGura.Models.Fornecedor

@{
    ViewData["Title"] = "Detalhes do Fornecedor";
}

<div class="container mt-4">
    <!-- Informações do Fornecedor -->
    <div>
        <h4>Fornecedor</h4>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.RazaoSocial)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.RazaoSocial)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Telefone)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Telefone)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Endereco)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Endereco)
            </dd>
        </dl>
    </div>

    <!-- Tabela de Produtos Fornecidos -->
    <div>
        <h4>Produtos Fornecidos</h4>
        <hr />
        <table class="table table-bordered table-striped table-hover">
            <thead class="thead-light">
                <tr>
                    <th>ID do Produto</th>
                    <th>Preço de Custo</th>
                    <th>Quantidade</th>
                    <th>Data</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.Produtosfornecidos)
                {
                    <tr>
                        <td>@Html.DisplayFor(modelItem => item.Idproduto)</td>
                        <td>@Html.DisplayFor(modelItem => item.PrecoCusto)</td>
                        <td>@Html.DisplayFor(modelItem => item.Quantidade)</td>
                        <td>@Html.DisplayFor(modelItem => item.Data)</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <!-- Ações de Navegação -->
    <div class="mt-3">
        <a asp-action="Edit" asp-route-id="@Model?.Cnpj" class="btn btn-warning">Editar</a> |
        <a asp-action="Index" class="btn btn-secondary">Voltar para a Lista</a>
    </div>
</div>
