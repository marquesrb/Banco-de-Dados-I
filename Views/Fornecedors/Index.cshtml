@model IEnumerable<prjGura.Models.Fornecedor>

@{
    ViewData["Title"] = "Fornecedores";
}

<div class="container mt-4">
    <h1>Fornecedores</h1>

    <!-- Link para Criar Novo Fornecedor -->
    <p>
        <a asp-action="Create" class="btn btn-success">Criar Novo</a>
    </p>

    <!-- Tabela de Fornecedores -->
    <table class="table table-striped table-hover">
        <thead class="thead-light">
            <tr>
                <th>@Html.DisplayNameFor(model => model.RazaoSocial)</th>
                <th>@Html.DisplayNameFor(model => model.Telefone)</th>
                <th>@Html.DisplayNameFor(model => model.Endereco)</th>
                <th>Ações</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                    <tr>
                        <td>@Html.DisplayFor(modelItem => item.RazaoSocial)</td>
                        <td>@Html.DisplayFor(modelItem => item.Telefone)</td>
                        <td>@Html.DisplayFor(modelItem => item.Endereco)</td>
                        <td>
                            <!-- Links para Editar, Detalhes e Deletar -->
                            <a asp-action="Edit" asp-route-id="@item.Cnpj" class="btn btn-warning btn-sm">Editar</a> |
                            <a asp-action="Details" asp-route-id="@item.Cnpj" class="btn btn-info btn-sm">Detalhes</a> |
                            <a asp-action="Delete" asp-route-id="@item.Cnpj" class="btn btn-danger btn-sm">Deletar</a>
                        </td>
                    </tr>
            }
        </tbody>
    </tabl
